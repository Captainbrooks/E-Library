        <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#staticBackdrop"
            style="margin: 20px; background-color: #001eff;" style="border-radius: 20px;">
            Add New Book
        </button>



        <!-- modal -->

        <div class="modal fade" id="staticBackdrop" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1"
            aria-labelledby="staticBackdropLabel" aria-hidden="true">
            <div class="modal-dialog">
                <div class="modal-content" style="background-color: #f0f0f0;">
                    <div class="modal-header">
                        <h1 class="modal-title fs-5" id="staticBackdropLabel">Add new book</h1>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <div class="modal-body">

                        <form id="addBookForm" class="mb-4" action="/addbook" method="post"
                            enctype="multipart/form-data">
                            <div class="form-group">
                                <label for="title">Title:</label>
                                <input type="text" name="title" class="form-control" id="title" required>
                            </div>
                            <div class="form-group">
                                <label for="author">Author:</label>
                                <input type="text" name="author" class="form-control" id="author" required>
                            </div>
                            <div class="form-group">
                                <label for="genre">Genre:</label>
                                <input type="text" name="genre" class="form-control" id="genre" required>
                            </div>
                            <div class="form-group">
                                <label for="bookURL">Book URL:</label>
                                <input type="url" name="url" class="form-control" id="bookURL"
                                    placeholder="Enter book URL">
                            </div>
                            <div class="form-group">
                                <label for="bookFile">Upload Book File:</label>
                                <input type="file" name="bookinfo" class="form-control-file" id="bookFile">
                            </div>
                            <div class="form-group">
                                <label for="bookCover">Upload Book Cover Image:</label>
                                <input type="file" name="bookimg" class="form-control-file" id="bookCover"
                                    accept="image/*">
                            </div>



                            <div class="modal-footer">
                                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                                <button type="submit" class="btn btn-primary">Add Book</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>

